{
  "include": ["./src"],
  "exclude": ["node_modules/", "build/"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": "./src",
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES5", "ES6", "DOM", "DOM.Iterable"],
    "paths": {
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"],
      "@shared/*": ["./views/Shared/*"],
      "@typings/*": ["./typings/*", "./typings"]
    }
  }
}